{
  "private": true,
  "name": "isad-widget",
  "version": "1.0.0-beta",
  "description": "Display a banner-link to promote International Stuttering Awareness Day (ISAD) - 22nd October ... Â© Nick Freear, 21-Jul-2017, 01-Sep-2017 ...",
  "license": "MIT",
  "browser": "dist/isad-widget.js",
  "main": "./index.js",
  "author": "Nick Freear {@nfreear}",
  "repository": "https://github.com/nfreear/isad-widget",
  "devDependencies": {
    "browserify": "^14.4.0",
    "less": "^2.7.2",
    "semistandard": "^11.0.0"
  },
  "scripts": {
    "build": "npm run semi && npm run browserify && npm run less",
    "browserify": "browserify index.js > dist/isad-widget.js",
    "less": "lessc style/isad-widget.less > style/isad-widget.css",
    "less-x": "node_modules/.bin/lessc dropbox/isad-widget.less > isad-widget.css",
    "semi": "semistandard"
  },
  "semistandard": {
    "ignore": [
      "dist", "dropbox", "gaad-*"
    ]
  },
  "//": [
    "https://stammering.org/sites/default/files/isad_ribbon.jpg",
    "https://en.wikipedia.org/wiki/File:Teal_ribbon.svg#!-license:CC-BY-3.0"
  ]
}
